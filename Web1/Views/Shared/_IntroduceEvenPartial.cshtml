        <div class="d-none d-sm-flex thumb">
            <br />
            <img src="~/images/@Model.Image" width="504px" height="480px" radius ="8px"/>

        </div>
        <div class="d-block d-sm-none thumb">
            <br />
            <img src="~/images/@Model.Image" width="335px" height="312px" radius="8px" />

        </div>
    </div>
  
</div>

