@model Web1.Models.MenuButton
<nav class="navbar navbar-expand-lg fixed-top bg-transparent"  >
    <div class="container" style="background-color: transparent !important; box-shadow: none;">
          <div class="d-none d-md-block w-100">

            <div class=" d-flex justify-content-end align-items-center" id="navbarNav">
                <ul class="navbar-nav d-flex flex-row align-items-center gap-4 ms-auto">
                        @foreach (var item in Model.menus)
                        {
                            <li class="nav-item">
                                <h3 class="nav-link text-black fw-bold">@item.Title</h3>
                            </li>
                        }
                        <li class="nav-item" style="background-color: #F84646; width: 90px; height: 45px; padding: 1px 1px; line-height: 1.2; border-radius: 5px;">
                            <h3 class="nav-link text-white mb-0">@Model.ButtonTitle</h3>
                        </li>
                    </ul>
                  
                
            </div>
        </div>
        <div class="d-block d-md-none row w-100">

            <div class=" navbar-collapse " id="navbarNav">

                <ul class=" navbar-nav  d-flex flex-row-reverse justify-content-between align-items-center w-100">

                    <li class="nav-item " style="background-color: #F84646; width: 70px; height: 35px; padding: 1px 1px; line-height: 1.2; border-radius: 5px;">
                        <h3 class="nav-link text-white mb-0" style="margin:0px 10px 0px 10px">@Model.ButtonTitle</h3>
                    </li>
                    <li class="nav-item">
                        <img src="~/images/List.png" />
                    </li>
                </ul>
            </div>

        </div>

    </div>
</nav>
