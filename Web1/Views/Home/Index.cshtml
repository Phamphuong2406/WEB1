@using Web1.ViewModel
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top bg-transparent">
    <div class="container">
       
       

        <div class="collapse navbar-collapse" id="navbarNav">
            @foreach (var item in Model.menu)
            {
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><h1 class="nav-link text-black fw-bold" >@item.Title</h1></li>
                   
                </ul>
            }
           
        </div>
    </div>
</nav>

<section class="position-relative" style="height: 100vh;">
    <img src="@Url.Content("~/images/" + Model.header.image)"
         class="w-100 h-75 position-absolute top-0 start-0 object-fit-cover"
         alt="background" />

    <div class="container position-relative z-1 text-white h-100 d-flex align-items-center">
        <div class="col-md-6">
            <h1 class="fw-bold display-5 text-black">@Model.header.title</h1>
            <p class="mb-4">
               @Model.header.description
            </p>
            <form class="d-flex" style="max-width: 400px;">
                <input type="email" class="form-control rounded-start" placeholder="Mail bültenimize kayıt ol" />
                <button type="submit" class="btn btn-danger text-white rounded-end px-4">Kayıt Ol</button>
            </form>
        </div>
    </div>
    
</section>


<section class="featured section-padding">
    <div class="container">
        <div class="row">

            <div class="col-12 mt-5 mt-lg-0">
                <div class="about-thumb">
                    @foreach (var general in Model.generalserviceFeatures)
                    {
                        <h3 class="text-center">@general.SectionTitle</h3>
                        <p class="text-center text-black">@general.SectionDescription</p>
                        <div class="row">
                            @foreach (var item in general.serviceFeature)
                            {
                                <div class="col-4  py-2  align-items-center">
                                    <div class="text-center">
                                        <img class="featured-image " src="~/images/@item.Icon" width="80" />
                                    </div>
                                 
                                        <h4 class="text-center">@item.Title</h4>
                                    <p class="text-black text-center mb-0">@item.Description</p>
                                </div>

                            }

                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>


<section class="clients section-padding">
    <div class="container">
        <div class="row align-items-center">

            @foreach (var item in Model.generalDesription)
            {
                <div class="col-lg-12 col-12">
                    <h3 class="text-center ">@item.title</h3>
                    <p class="text-center text-black">@item.description</p>

                </div>
                @foreach (var partner in item.partners)
                {
                    <div class="col-lg-2 col-4 ms-auto clients-item-height">
                        <img src="~/images/@partner.Logo" class="clients-image img-fluid" alt="@partner.Name">
                    </div>


                }
            }
        </div>
    </div>
</section>
<section class="clients section-padding">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-6">
                <img src="~/images/@Model.block6.Icon" width="60" class="mb-3" />

                <h3>@Model.block6.Title</h3>
                <p>@Model.block6.Description</p>
                <button class="btn btn-danger text-white rounded-pill fw-bold px-3 py-1">
                    @Model.block6.TitleButton
                </button>
            </div>
        </div>
    </div>
</section>
<section class="section" id="about">
    <div class="container">
        @for (int i =0; i< @Model.introduces.Count(); i++ )
        {
            bool isEvent = i % 2 == 0;
            var item = @Model.introduces[i];
            if (isEvent)
            {
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="left-text-content">
                            <div class="section-heading">
                                <h6></h6>
                                <h3>@item.title</h3>
                            </div>
                            <p>@item.description</p>
                          
                        </div>
                        <button class="btn btn-danger text-white  fw-bold px-5 py-2">
                            @item.TitleButton
                        </button>
                    </div>
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="right-content">
                            <div class="thumb">
                                <br />
                                <img src="~/images/@item.Image" width="550" />

                            </div>
                        </div>
                    </div>
                   
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="right-content">
                            <div class="thumb">
                                <br />
                                <img src="~/images/@item.Image" width="550" />

                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-xs-12">
                        <div class="left-text-content">
                            <div class="section-heading">
                                <h6></h6>
                                <h3>@item.title</h3>
                            </div>
                            <p>@item.description</p>

                        </div>
                        <button class="btn btn-danger text-white  fw-bold px-5 py-2">
                            @item.TitleButton
                        </button>
                    </div>
                   
                </div>
            }
        }


    </div>
</section>

<section class="clients section-padding">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-6">
                <img src="~/images/@Model.block6.Icon" width="60" class="mb-3" />

                <h3>@Model.block6.Title</h3>
                <p>@Model.block6.Description</p>
                <button class="btn btn-danger text-white rounded-pill fw-bold px-3 py-1">
                    @Model.block6.TitleButton
                </button>
            </div>
        </div>
    </div>
</section>

<section class="text-white pt-5 pb-3" style="background-color: Red;">
    <div class="container">
          @foreach (var item in Model.Footer)
        {
             
            <div class="row">
                @foreach (var partner in item.LinkGroups)
                {
                    <!-- Cột 1 -->
                    <div class="col-6 col-md-3 mb-3">
                        <h6 class="fw-bold text-white">@partner.GroupTitle</h6>
                        @foreach (var Item in partner.Links)
                        {
                            <ul class="list-unstyled">

                                <li><p class="text-white">@Item.Text</p></li>

                               

                            </ul>
                        }
                    </div>

                   
                }
                <p class="text-white">@item.Title </p>
                
          
        </div>
        }
    </div>
</section>

